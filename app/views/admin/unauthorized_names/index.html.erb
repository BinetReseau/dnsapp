<h1><%= @title %></h1>

<% if @unauthorized_names.count > 0 %>
<table class="unames">
  <caption><%= @title %></caption>

  <thead>
    <tr>
      <th>Nom</th>
      <th>Commentaire</th>
    </tr>
  </thead>

  <tbody>
    <% @unauthorized_names.each do |un| %>
    <tr>
      <td>
        <%= link_to un.name, un %><br />
        <%= link_to "Modifier", edit_admin_unauthorized_name_path(un) %> | 
        <%= link_to "Supprimer", un, :method => :delete,
	                             :confirm => "Supprimer #{un.name} ?",
				     :title => "Supprimer #{un.name}" %>
      </td>
      <td><%= un.comment %></td>
    </tr>
    <% end %>
  </tbody>

</table>
<% end %>

<p>
  <%= link_to "Nouveau nom interdit", new_admin_unauthorized_name_path %>
</p>
