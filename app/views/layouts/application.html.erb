<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <meta charset="UTF-8">
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag 'custom', :media => 'screen' %>
</head>
<body>
    <%= render 'layouts/header' %>
	<div class="gray">
		<section id="Content">
		  <% flash.each do |key, value| %>
			<%= content_tag(:div, value, :class => "flash #{key}") %>
		  <% end %>
		  <%= yield %>
		</section>
	</div>
    <%= render 'layouts/footer' %>
    <div class="end"></div>
</body>
</html>
