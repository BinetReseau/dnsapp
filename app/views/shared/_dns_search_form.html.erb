<%= form_tag(object[:search_path], :method => "get", :class => "search round") do %>
  <% if !object[:reverse].nil? && object[:reverse] == true %>
    <%= label_tag(:name, "reverse ip : ") %>
    <%= text_field_tag(:name, params[:name]) %>
    <%= label_tag(:ip, "nom : ") %>
    <%= text_field_tag(:ip, params[:ip]) %>
  <% else %>
    <% if object[:search_ip].nil? || object[:search_ip] == true %>
    <%= label_tag(:ip, "ip : ") %>
    <%= text_field_tag(:ip, params[:ip]) %>
    <% end %>
    <%= label_tag(:name, "nom : ") %>
    <%= text_field_tag(:name, params[:name]) %>
  <% end %>
  <%= submit_tag "Chercher" %>
<% end %>
